<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Log directory and file -->
    <property name="LOG_PATH" value="/usr/src/app/logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/bankapp-json.log" />

    <!-- Console logging (for stdout) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON file appender with rolling policy -->
    <appender name="LOGSTASH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily log file with date -->
            <fileNamePattern>${LOG_PATH}/bankapp-json-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <!-- JSON encoder with custom timestamp format -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <timeStampPattern>dd-MM-yyyy HH:mm</timeStampPattern>
        </encoder>
    </appender>

    <!-- Application-specific logger -->
    <logger name="com.example.bankapp" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </root>

</configuration>
