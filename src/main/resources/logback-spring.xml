<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- JSON Encoder using Logstash format -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="JSON-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>bankapp-json.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>bankapp-json-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>@timestamp</fieldName>
                </timestamp>
                <version/>
                <message/>
                <loggerName>
                    <fieldName>logger_name</fieldName>
                </loggerName>
                <threadName>
                    <fieldName>thread_name</fieldName>
                </threadName>
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>
                <logLevelValue>
                    <fieldName>level_value</fieldName>
                </logLevelValue>
            </providers>
        </encoder>
    </appender>

    <!-- Suppress all framework logs -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.web.servlet" level="WARN"/>
    <logger name="org.springframework.boot.autoconfigure.orm.jpa" level="WARN"/>
    <logger name="org.springframework.orm.jpa" level="WARN"/>

    <!-- Your application logs -->
    <logger name="com.example.bankapp" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="JSON-FILE"/>
    </root>

</configuration>
