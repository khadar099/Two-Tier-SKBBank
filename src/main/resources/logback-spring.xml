<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <!-- JSON encoder -->
    <appender name="JSON-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>bankapp-json.log</file> <!-- live file -->

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>bankapp-json-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>@timestamp</fieldName>
                </timestamp>
                <version/>
                <message/>
                <loggerName>
                    <fieldName>logger_name</fieldName>
                </loggerName>
                <threadName>
                    <fieldName>thread_name</fieldName>
                </threadName>
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>
                <logLevelValue>
                    <fieldName>level_value</fieldName>
                </logLevelValue>
            </providers>
        </encoder>
    </appender>

    <!-- ✅ Only log com.example.bankapp to JSON-FILE -->
    <logger name="com.example.bankapp" level="INFO" additivity="false">
        <appender-ref ref="JSON-FILE" />
    </logger>

    <!-- ❌ Suppress unwanted logs (Spring, Hibernate, etc.) -->
    <logger name="org.springframework" level="OFF" />
    <logger name="org.hibernate" level="OFF" />
    <logger name="org.apache" level="OFF" />
    <logger name="com.zaxxer.hikari" level="OFF" />
    <logger name="org.springframework.security" level="OFF" />
    <logger name="org.springframework.boot" level="OFF" />

    <!-- 🚫 No appender for root to prevent all other logs -->
    <root level="OFF" />
</configuration>
